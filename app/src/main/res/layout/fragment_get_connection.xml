    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="151dp"
        android:layout_height="130dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_man"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/client_name"
        android:layout_width="327dp"
        android:layout_height="44dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/square_shape_of_edittext"
        android:hint="Name"
        android:padding="4dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/clint_phone"
        android:layout_width="327dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:background="@drawable/square_shape_of_edittext"
        android:hint="Phone number"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/client_name" />

    <EditText
        android:id="@+id/client_address"
        android:layout_width="327dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/square_shape_of_edittext"
        android:hint="Address"
        android:padding="4dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clint_phone" />

    <EditText
        android:id="@+id/clint_email"
        android:layout_width="327dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/square_shape_of_edittext"
        android:hint="Email"
        android:padding="4dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/client_address" />

    <EditText
        android:id="@+id/clint_password"
        android:layout_width="327dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/square_shape_of_edittext"
        android:hint="Password"
        android:padding="4dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clint_email" />

    <Button
        android:id="@+id/apply_button"
        android:layout_width="333dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:textAllCaps="false"
        android:background="@drawable/textview_square_shape"
        android:backgroundTint="#BAB7BD"
        android:text="Apply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clint_password"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>